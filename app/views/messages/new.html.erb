<center>
<h1>Create New Message</h1>
<%= form_for(@message) do |f| %>
<%= f.hidden_field :sender_id,:value => current_user.id %>
<%= f.label 'Send Message To:' %>
<%= f.collection_select :recipient_id, User.order(:email),:id,:email  %><br>
<%= f.text_area :body, class:'form-control', style:'width: 60%' %><br>
<%= f.submit "Send Message"%>
<% end %>
</center>
